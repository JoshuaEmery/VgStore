@model Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductID" />
        <div class="form-group">
            <label asp-for="Name"></label>
            <div><span asp-validation-for="Name" class="text-danger"></span></div>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <div><span asp-validation-for="Description" class="text-danger"></span></div>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Genre"></label>
            <div><span asp-validation-for="Genre" class="text-danger"></span></div>
            <input asp-for="Genre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <div><span asp-validation-for="Price" class="text-danger"></span></div>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ESRB"></label>
            <div><span asp-validation-for="ESRB" class="text-danger"></span></div>
            <input asp-for="ESRB" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Multiplayer"></label>
            <div><span asp-validation-for="Multiplayer" class="text-danger"></span></div>
            <input asp-for="Multiplayer" class="form-control" />
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>